<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Text_Title">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/md_black_1000</item>
    </style>

    <style name="progress_bar" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateTint">@color/cyan_600</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="tab_text_size">

        <item name="android:textSize">@dimen/category_tab_size</item>

    </style>
    
    <style name="translucent"  parent="AppTheme">
        <item name="android:windowBackground">@color/translucent</item>
        <item name="android:windowIsTranslucent" >true</item>
    </style>

    <style name="collTextStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>


    <style name="app_detail_teitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textSize">18sp</item>
    </style>

    android:textSize="14sp"
    android:textColor="@color/blue_grey_300"
    android:layout_marginLeft="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    <style name="app_detail_teitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textColor">@color/md_black_1000</item>
        <item name="android:textSize">18sp</item>
    </style>



</resources>
